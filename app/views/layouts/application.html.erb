<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1"> 
    <script src="https://kit.fontawesome.com/2f55519fa6.js" crossorigin="anonymous"></script>
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header class="bg-dark mb-4">
    <nav class="navbar navbar-expand-lg navbar-light">
    <div class="container">
      <a class="navbar-brand px-3 text-light" href="/"><h5>Bookers</h5></a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNavDropdown">
        <ul class="navbar-nav ml-auto">
        <% if user_signed_in? %>
          <li>
            <%= link_to user_path(current_user.id), class: 'nav-link text-white' do %>
            <h6>
              <i class="fas fa-home"></i>
              Home
            </h6>
            <%end%>
          </li>
          
          <li>
            <%= link_to users_path, class: 'nav-link text-white' do%>
            <h6>
              <i class="fas fa-users"></i>
              Users
            </h6>
            <%end%>
          </li>
          
          <li>
            <%= link_to books_path, class: 'nav-link text-white' do%>
            <h6>
              <i class="fas fa-book-open"></i>
              Books
            </h6>
            <%end%>
          </li>
          
          <li>
            <%= link_to destroy_user_session_path, method: :delete, class: 'nav-link text-white' do %>
            <h6>
              <i class="fas fa-sign-out-alt"></i>
              Log out
            </h6>
            <%end%>
          </li>
          
        <% else %>
         <li>
            <%= link_to  root_path, class: 'nav-link text-white' do %>
            <h6>
              <i class="fas fa-home"></i>
              Home
            </h6>
            <%end%>
         </li>
        
         <li>
            <%= link_to  about_path, class: 'nav-link text-white'  do%>
            <h6>
              <i class="fas fa-link"></i>
              About
            </h6>
            <%end%>
         </li>
         <li>
            <%= link_to new_user_registration_path, class: 'nav-link text-white' do %>
            <h6>
              <i class="fas fa-user-plus"></i>
              Sign up
            </h6>
            <%end%>
         </li>
         <li>
            <%= link_to  new_user_session_path, class: 'nav-link text-white' do %>
             <h6>
              <i class="fas fa-sign-in-alt"></i>
               Log in
             </h6>
            <%end%>
         </li>
        <% end %>
      </ul>
      </div>
      </div>
    </nav>
  </header>
    <%= yield %>
  
  <footer>
    <div class="container">
      <div class="row">
        <p class="mx-auto mt-5">CopyRight Infratop.inc</p>
      </div>
    </div>
  </footer>
  </body>
</html>
