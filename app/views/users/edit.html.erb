<% if @user.errors.any? %>
  <%= @user.errors.count %> errors prohibited this book from being saved:
  <ul>
    <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<div class="container">
  <div class="row">
    <div class="mx-auto mt-4 ">
      <h2>User info</h2>
      <%= form_with model: @user do |f| %>
      
      <div class="mt-3">
        <label for="inputName">Name</label> <br>
        <%= f.text_field :name, autofocus: true, id:"inputName", class:"col"%>
      </div>
      
      <div class="mt-3">
        <label for="inputImage">Image</label><br>
        <%= f.file_field :profile_image, accept: "image/*" %>  
      </div>
      
      <div class="mt-3">
        <label for="inputName">Introduction</label><br>
        <%= f.text_area :introduction, autofocus: true, id:"inputIntroduction", class:"col" %>
      </div>
      <div>
        <%= f.submit "Update User", class: "btn btn-secondary mt-3" %>
      </div>
      <% end %>
    </div>
  </div>
</div>