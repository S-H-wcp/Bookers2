<% if @book.errors.any? %>
  <%= @book.errors.count %> errors prohibited this book from being saved:
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<div class="container mt-3">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 mx-auto px-5 px-sm-0 ">
    <h2>Editing Book</h2>
    
    <%= form_with model: @book, url: book_path(@book.id), method: :patch  do |f| %>
    <div class="mt-3">
      <label>Title</label>
      <%= f.text_field :title, class: "col"  %>
    </div>
    <div class="mt-3">
      <label>Opinion</label> <br>
      <%= f.text_area :body, class:"col" %>
    </div>
    
    <div class="mt-3">
      <%= f.submit 'Update Book',class: "btn btn-success"  %>
    </div>
    <% end %>
    <div class="mt-3">
    <%= link_to "Show", book_path(@book.id) %>|
    <%= link_to "Back", books_path() %>
    </div>
    </div>
  </div>
</div>